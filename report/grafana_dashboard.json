{
  "title": "ZeroDay PoC Metrics",
  "panels": [
    {"title": "Windows Count", "expr": "zd_windows_count"},
    {"title": "Alerts Count", "expr": "zd_alerts_count"}
  ]
}
{
  "title": "Zero-Day PoC Overview",
  "panels": [
    {
      "type": "stat",
      "title": "Alert files",
      "targets": [
        {"expr": "zero_day_alerts_total", "legendFormat": "alerts"}
      ],
      "id": 1
    },
    {
      "type": "stat",
      "title": "Windows generated",
      "targets": [
        {"expr": "zero_day_windows_total", "legendFormat": "windows"}
      ],
      "id": 2
    },
    {
      "type": "graph",
      "title": "Latest window timestamp",
      "targets": [
        {"expr": "zero_day_latest_window_ts", "legendFormat": "ts"}
      ],
      "id": 3
    }
  ]
}
